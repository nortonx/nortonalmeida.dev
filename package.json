{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=24.11",
    "npm": ">=11.6"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --cache --cache-location .next/eslintcache --ext .ts,.tsx src __tests__ e2e playwright.config.ts jest.config.ts next.config.ts postcss.config.mjs eslint.config.mjs",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "npx prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "jest --collectCoverage",
    "test:watch": "jest --watchAll",
    "test:updateSnapshot": "jest --updateSnapshot",
    "test:playwright": "playwright test --reporter=dot",
    "test:ui": "playwright test --ui",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-navigation-menu": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.0",
    "@types/node-fetch": "^2.6.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.23.25",
    "lucide-react": "^0.503.0",
    "next": "^15.5.0",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.51.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^6.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "prettier": "3.6.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.2.8",
    "typescript": "^5"
  }
